---
import { experience } from "@cv";
import ExperienceIcon from "@/icons/ExperienceIcon.astro";
---

<section>
    <h2 class="font-bold text-xl flex items-center mb-4">
        <ExperienceIcon />Experiencia
    </h2>
    <ul class="grid grid-cols-1 print:grid-cols-2 gap-4 md:grid-cols-2">
        {
            experience.map(({ puesto, lugar, fechas, responsabilidades }) => {
                return (
                    <li class="flex justify-between p-2 border rounded-lg items-center">
                        <article class="flex flex-col gap-2 justify-center">
                            <div class="flex justify-between w-full">
                                <h3 class="text-base flex underline font-bold">
                                    {puesto}
                                </h3>
                                {/* <span class="text-gray-800 text-xs font-medium">{fechas}</span> */}
                            </div>
                            {/* <h4 class="text-sm font-medium">•{lugar}</h4> */}
                            <ul>
                                {responsabilidades.map((responsability) => (
                                    <li class="flex flex-row gap-4 items-center">
                                        <span class=" text-gray-800 text-xs font-medium me-2 px-2.5 py-0.5">
                                            •{responsability}
                                        </span>
                                    </li>
                                ))}
                            </ul>
                        </article>
                    </li>
                );
            })
        }
    </ul>
</section>

