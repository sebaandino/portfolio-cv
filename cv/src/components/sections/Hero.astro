---
import { basics } from "@cv";
import Section from "../Section.astro";
import Mail from "@/icons/Mail.astro";
import Phone from "@/icons/Phone.astro";
import WorldMap from "@/icons/WorldMap.astro";
import GitHub from "@/icons/GitHub.astro";
import LinkedIn from "@/icons/LinkedIn.astro";
import CalendarIcon from "@/icons/CalendarIcon.astro";

const { name, label, image, dateOfBirth,email, phone, location, profiles } = basics;
const { address, postalCode, city, countryCode, region } = location;

const SOCIAL_ICONS: Record<string, any> = { GitHub, LinkedIn };
---

    <div class="container">
        <div class="info">
            <h1>{name}</h1>
            <h2 class="flex items-center gap-2"><CalendarIcon/>{dateOfBirth}</h2>
            <span class="flex flex-row items-center text-pretty gap-2">
                <WorldMap />
                {city}
                {region} C.P. {postalCode}
            </span>
            <footer>
                {
                    profiles.map(({ network, username, url }) => {
                        const Icon = SOCIAL_ICONS[network];
                        return (
                            <a
                                href={url}
                                title={`visitar el perfil de ${name} en ${network}`}
                                target="_blank"
                            >
                                <Icon />
                            </a>
                        );
                    })
                }
                {
                    email && (
                        <a
                            href={`mailto:${email}`}
                            title={`Enviar un correo a ${name} al correo ${email}`}
                            target="_blank"
                        >
                            <Mail />
                        </a>
                    )
                }
                {
                    phone && (
                        <a
                            href={`tel:${phone}`}
                            title={`llamar a ${name} al telÃ©fono ${phone}`}
                            target="_blank"
                        >
                            <Phone />
                        </a>
                    )
                }
            </footer>
            <div id="print" class="hidden items-center">
               <Mail />{email}
               <Phone />{phone}
            </div>
        </div>
        <figure>
            <img src={image} alt={name} />
        </figure>
    </div>

<style>
    .container {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
    }

    .info {
        display: flex;
        flex-direction: column;
        padding-right: 30px;
        gap: 0.6rem;
    }

    h1 {
        font-size: 2rem;
    }

    h2 {
        color: #444;
        font-weight: 500;
        font-size: 1.1rem;
        text-wrap: balance;
    }

    img {
        aspect-ratio: 1/1;
        objer-fit: cover;
        width: 130px;
        border-radius: 6px;
    }

    footer {
        display: flex;
        flex-direction: row;
        gap: 1rem;

        && a {
            color: #444;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border: 1px solid #444;
            padding: 0.5rem;
            border-radius: 6px;
            transition: background-color 0.2s ease-in-out;

            &:hover {
                background-color: #eee;
            }
        }
    }

    @media screen and (max-width: 768px) {
        /* .container {
            flex-direction: column;
            align-items: center;
            gap: 1rem;
        } */

        .info {
            padding-right: 0;
            gap: 0.5rem;
        }

        img {
            width: 100%;
        }
        
    }

    @media print {
        #print {
            display: flex;
            gap: 0.5rem;
        }

        footer{
            display: none;
        }
    }
</style>
